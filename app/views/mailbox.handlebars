<nav>
  <div class="logo"></div>
  <ul>
    <li  class="compose"><a href="#"><i class="icon-pencil"></i></a></li>
    <li><a href="#"  class="selected"><i class="icon-inbox"></i></a></li>
    <li><a href="#"><i class="icon-plane"></i></a></li>
    <li><a href="#"><i class="icon-file"></i></a></li>
    <li><a href="#"><i class="icon-trash"></i></a></li>
    <li><a href="#"><i class="icon-search"></i></a>
    <li><a href="#"><i class="icon-cog"></i></a></li>
  </ul>
</nav>

<div class="compose-message">
  <form>
    <div class="exit"><a href="#">&times;</a></div>
    <input type="text" placeholder="Subject" class="subject">
    <input type="text" placeholder="To">
    <textarea></textarea>
    <input type="submit" value="Send">
    <a href="#"><i class="icon-trash"></i></a>
  </form>
</div>

<div class="message-list">
  {{#each message}}
  <div class="indiv-message selected">
    <div class="author">
      <img src="{{message.author.picture}}">
      <h3>{{message.author.name}}</h3>
    </div>

    <div class="subject-sum">
      <h2>{{message.subject}}</h2>
      <p>{{message.body}}</p>
    </div>

    <div class="time">
      <i class="icon-paper-clip"></i>
      <div class="details">
        <div class="status">
      </div>
      <h4>{{message.time}}</h4>
    </div>
  </div>
  {{/each}}
</div>

<div class="search"></div>

<div class="full-message">
  <div class="top clearfix">
    <div class="author">
      <img src="{{message.author.picture}}">
      <h3>{{message.author.name}}</h3>
      <h4>{{message.time}}</h4>
    </div>

    <div class="subject-sum">
      <h2>{{message.subject}}</h2>
      <h3>{{message.recipients}}</h3>
    </div>

    <div class="actions">
      <a href="#"><i class="icon-reply"></i></a>
      <a href="#"><i class="icon-reply-all"></i></a>
      <a href="#"><i class="icon-trash"></i></a>
    </div>
  </div>

  <div class="message">
    {{message.body}}
    <div class="attachment">
      <i class="icon-paper-clip"></i>
      <a href="#">myattachment.pdf</a>
    </div>
    <a href="#"><i class="icon-trash"></i></a>
    <a href="#"><i class="icon-reply"></i></a>
  </div>

  {{#ach message}}
  <div class="past-message clearfix">
    <div class="indiv-message">
      <div class="author">
        <img src="{{message.past.author.picture}}">
        <h3>{{message.past.author.name}}</h3>
        <h4>{{message.past.time}}</h4>
      </div>

      <div class="message">
        {{message.past.body}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
