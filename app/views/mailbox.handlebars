<div class="search">
  <input type="text" placeholder="Search">
</div>

<div class="message-list">
  {{#if messages}}
    {{#each messages}}
      <div class="indiv-message clearfix">
        <div class="from">
          <img src="{{from.picture}}">
          <h3>{{from.name}}</h3>
        </div>

        <div class="subject-sum">
          <h2>{{title}}</h2>
          <p>{{body}}</p>
        </div>

        <div class="date">
          <i class="icon-paper-clip"></i>

          <div class="status">
          </div>

          <h4>{{date}}</h4>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>

<div class="full-message">
  {{#if messages}}
    {{#each messages}}
      <div class="top clearfix">
        <div class="from">
          <img src="{{from.picture}}">
          <h3>{{from.name}}</h3>
        </div>

        <div class="subject-sum">
          <h2>{{title}}</h2>
          <h3>{{to}}</h3>
          <h4>{{date}}</h4>
        </div>

        <div class="actions">
          <i class="icon-reply"></i>
          <i class="icon-reply-all"></i>
          <i class="icon-trash"></i>
        </div>
      </div>

      <div class="message">
        {{body}}
      </div>

      <div class="past-message">
        <div class="indiv-message">
          <div class="from">
            <img src="{{past.from.picture}}">
            <h3>{{past.from.name}}</h3>
            <h4>{{past.from.date}}</h4>
          </div>

          <div class="message">
            {{past.body}}
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>
